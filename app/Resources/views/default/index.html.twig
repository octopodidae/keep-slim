{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }
        body {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .content {
            width: 180px;
            height: 180px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
            transition: all 0.4s cubic-bezier(0.39, 0.575, 0.565, 1);
        }
        .material-icons.md-80 { font-size: 80px; }
        a{color:white;}
        a:hover{color:white;}
        .wowpanel{margin: 30px;}
    </style>
{% endblock %}{#end block stylesheets#}
{% block content %}
    {% block header %} {{ parent() }}{% endblock %}
    <div class="wowpanel" >
        <a href="http://127.0.0.1/keep_slim/web/app_dev.php/walking">
            <div class="content" id="content_walk"><i class="material-icons md-80 md-inactive" id="walk">directions_walk</i></div>
        </a>
    </div>
    <div class="wowpanel">
         <a href="http://127.0.0.1/keep_slim/web/app_dev.php/swiming">
            <div class="content" id="content_pool"><i class="material-icons md-80 md-inactive" id="pool">pool</i></div>
        </a>
    </div>
    <div class="wowpanel">
        <a href="#">
            <div class="content" id="content_bike"><i class="material-icons md-80 md-inactive" id="bike">directions_bike</i></div>
        </a>
    </div>
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}{#end block content#}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"  src={{ asset('/assets/js/index.js') }}></script>
{% endblock %} {#end block javascripts#}








