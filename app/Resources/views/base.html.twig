<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Keep Slim{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href={{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}>
        <style>
            body {
                background-color: rgb(50,50,50);
                color: orange;
                background-image: url({{ asset('/assets/vendor/images/GoYhcga.png') }});
            }
            h1 {
                color: white;
            }
            #my_footer{
                position: absolute;
                bottom: 0px;
                background-color: rgb(30,30,30);
                padding: 1rem;
                width: 100%;
            }
        </style>
    </head>
    
    <body>
        <div class="container">{% block content %}{% endblock %}</div>
        <div class="container-fluid">
            <div class="row text-center">
                <div id="my_footer">
                    <kbd class="text-footer">Keep Slim</kbd>
                    <br>
                    <kbd class="text-footer">By Dev For Dev<kbd>
                </div>
            </div>
        </div>
        {% block javascripts %} <script src={{ asset('/assets/vendor/jquery/jquery.min.js') }}></script>{% endblock %}
    </body>
</html>
