<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Keep Slim{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet" href={{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}>
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <style>
                body {
                    color: #F59500;
                    background-image: url({{ asset('/assets/vendor/images/GoYhcga.png') }});
                    font-family: Menlo,Monaco,Consolas,"Courier New",monospace;
                }
                .align-middle {
                    margin-top: 10%;
                    margin-bottom: 15%;
                }
                #header, #footer{padding: 20px; height: 10%; background-image: url({{ asset('/assets/vendor/images/5981020-black-background-image.jpg') }});}
                h1, h3 {color: white;font-family: Menlo,Monaco,Consolas,"Courier New",monospace;}
                a {color: #4975FB;}
                a:hover{color:#924DE6;}
                a:hover, a:visited, a:link, a:active{text-decoration: none; }
                .pagination>li>a {color: #4975FB;}
                .glyphicon:hover{text-decoration: none;color:#924DE6;}
                .material-icons.md-inactive { color: rgba(255, 255, 255, 0.3); }
                .content{
                    box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
                    border-radius: 10px;
                }
            </style>
        {% endblock %}
    </head>
    <body>
    {% block content %}
        {% block header %}
            <div class="row-fluid text-center navbar-fixed-top" id="header">
                <h1>Keep Slim</h1>
            </div>
        {% endblock %}
        {% block footer %}
            <div class="row-fluid text-center navbar-fixed-bottom" id="footer">
                <kbd>Keep Slim</kbd>
                <br>
                <kbd>By Dev For Dev<kbd>
            </div>
        {% endblock %}
    {% endblock %}
    {% block javascripts %} <script src={{ asset('/assets/vendor/jquery/jquery.min.js') }}></script>{% endblock %}
    </body>
</html>
