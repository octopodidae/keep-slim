{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Walking - show{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 40%;
        }
    </style>
{% endblock %}
{% block content %}
    {% block header %}{{ parent() }}{% endblock %}
    <div class="container">
        <h3>Walking</h3>
        <br>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ walking.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ walking.date|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ walking.distance }}</td>
            </tr>
            <tr>
                <th>Step</th>
                <td>{{ walking.step }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ walking.comment }}</td>
            </tr>
            </tbody>
        </table>
        <br>
        <p><a href="{{ path('walking_index') }}">Back to the list</a></p>
    </div>
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}
