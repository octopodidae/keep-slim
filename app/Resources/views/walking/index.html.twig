{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('assets/vendor/seiyria-bootstrap-slider/dist/css/bootstrap-slider.min.css') }}>
    <style>
        th.header_cursor
        {
          cursor: pointer;
          font-weight: bold;
          background-repeat: no-repeat;
          background-position: center left;
        }
        tr:hover
        {
          background-color: #f5f5f5;
        }
        .graphic-area
        {
            height:100%;
            min-height: 150px;
            background-color: #f5f5f5;
            position: relative;
            bottom:0;
            left:0;
            border-radius: 4px;
        }
        .code
        {
            background-color: #f5f5f5;
            color: #337ab7;
        }
        #ex1Slider .slider-selection
        {
            background: #BABABA;
        }
        .my-div, .barre
        {
            position: absolute;
            width: 50px;
            bottom:0;
            max-height: 148px;
            color: black;
            font-size: 0.8em;
            font-weight: bold;

        }
    </style>

{% endblock %}
{#end block stylesheets#}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1>Walking list</h1>
        <br>
        <div id="div_table">
            {# table #}
            <table class="tablesorter table table-condensed" id="myTable">
                <thead>
                    <tr>
                        {# <th class="header_cursor">Id</th> #}
                        <th class="header_cursor">Date</th>
                        <th class="header_cursor">Distance</th>
                        <th class="header_cursor">Step</th>
                        <th class="header_cursor">Comment</th>
                        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for walking in walkings %}
                    <tr data-url="{{ path('walking_row', {'id': walking.id}) }}">
                        {# <td>{{ walking.id }}</td> #}
                        <td>{{ walking.date|date("d/m/Y") }}</td>
                        <td>{{ walking.distance }}</td>
                        <td>{{ walking.step }}</td>
                        <td>{{ walking.comment }}</td>
                        <td>
                            <a href="{{ path('walking_show', { 'id': walking.id }) }}" class="btn btn-md glyphicon glyphicon-zoom-in" role="button"></a>
                            <a href="{{ path('walking_edit', { 'id': walking.id }) }}" class="btn btn-md glyphicon  glyphicon-pencil" role="button"></a>
                            <a href="{{ path('walking_delete', { 'id': walking.id }) }}" class="btn btn-md glyphicon  glyphicon-remove" role="button"></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div> {# end div_table #}
    </div> {# end first container #}

    <div class="container">
        <div class="row">
            <div class="col col-md-2">
                <a id="create" href="{{ path('walking_new') }}">Create a new walking</a>
            </div>
            <div class="col col-md-2">
                <a id="display_hide_list" href="#">Display/Hide List</a>
            </div>
        </div>
    </div>
    <br>
    <div class="container">
        {# Slider #}
        <div class="well">
           <input id="my_slider" data-slider-id="ex1Slider" type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="5" style="display: none;">
        </div>
        <div class="graphic-area">
            <code class="code">Click on row or use the slider to display graphic</code>
        </div>
    </div>


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript"  src={{ asset('/assets/vendor/js/jquery.tablesorter.min.js') }}></script>
    <script type="text/javascript"  src={{ asset('assets/vendor/seiyria-bootstrap-slider/dist/bootstrap-slider.min.js') }}></script>


       <script>
        $(document).ready(function() {

            var table = $('#myTable');
            var div_table = $('#div_table');
            var display_hide_list = $('#display_hide_list');
            var protocole = 'http://';
            var ip = '127.0.0.1';
            var port = ':8081';
            var barre = $('.barre');
            var graphic_area = $('.graphic-area');
            var code = $('.code');
            var my_slider = $('#my_slider');
            var url_load = 'http://' + ip + port + '/keep_slim/web/app_dev.php/walking/load';
            var margin_left = 0;
            var speed = 500;
            
            // values displayed in the tooltip of slider
            my_slider
               .slider({
                    formatter: function(value) {
                        return value;
                    }
                });

            var loadData = function loadData(nb){
                var jqxhr = 
                $.ajax( {'url':url_load + '/' + nb, 'async':true, 'cache':true}  )
                .done(function( data ) {
                    var json = JSON.parse(data);
                    graphic_area.empty();
                    margin_left = 0;
                    //speed = 500;
                    for (var i=0; i<json.length;i++ ){
                        margin_left+=50;
                        var step = json[i];
                        var style = 'style="margin-left:' + margin_left + 'px'+ '"';
                        $('<div class="my-div text-center"' + ' id="div_' + (i+1) + '" ' +  style +  '>'+ json[i] + '</div>').appendTo(graphic_area);
                        animateGraphic(step, $('#div_' + (i+1)), speed);
                        //speed+=100;

                    }
                })
                .fail(function() {
                    console.log( "error" );
                })

            }

            // When the slider event eventType is triggered
            // when the dragging stops
            my_slider 
            .on('slideStop', function(event) {
                var value = $(this).slider('getValue');
                loadData(value);
             });


            // tablesorter
            table.tablesorter();

            // display/hide table
            display_hide_list.click(function () {
                div_table.slideToggle('slow');
            });

            // Blinking message into graphic area
            for ( var i = 0; i < 6; i++ ) {
                code.fadeToggle('slow');
            };

            // Response at request row (rowAction) to js object
            $('tr')
                .click(function () {
                    graphic_area.empty();
                    var url = protocole + ip + port + $(this).attr('data-url');
                    var jqxhr = $.ajax( {'url':url, 'async':true, 'cache':true}  )
                        .done(function( data ) {
                            var json = JSON.parse(data);
                            animateGraphic(json.step, $('<div class="my-div text-center"></div>').appendTo(graphic_area), speed);
                        })
                        .fail(function() {
                            console.log( "error" );
                        })
            })

            // Animate
            function animateGraphic (step, div, speed) {
                var px = 0;
                div.css( 'height', px );
                div.text(step);
                px = parseInt(Math.round(step/100));

                if (step >= 5000 && step < 10000) {
                    div
                        .css('background-color', 'orange')
                        .animate({ height: '+=' + px + 'px' }, speed );
                }
                else if  (step < 5000 ) {
                    div
                        .css('background-color', '#FE2E2E')
                        .animate({ height: '+=' + px + 'px' }, speed );
                }
                else if  (step >= 10000 ) {
                    div
                        .css('background-color', 'rgb(109,202,78)')
                        .animate({  height: '+=' + px + 'px' }, speed   );
                }
            }
        })
    </script>
{% endblock %}
