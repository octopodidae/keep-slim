{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('assets/vendor/bootstrap/css/bootstrap-slider.min.css') }}>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <style>
        th.header_cursor, .page-item {cursor: pointer;}
        .rows:hover {background-color: #f5f5f5;}
        .graphic-area {
            height:100%;
            min-height: 300px;
            background-color: #f5f5f5;
            position: relative;
            bottom:0;
            left:0;
            border-radius: 4px;
        }
        #ex1Slider .slider-selection {background: #BABABA;}
        .my-div {
            position: absolute;
            width: 50px;
            bottom:0;
            max-height: 280px;
            color: black;
            font-size: 0.8em;
            font-weight: bold;
        }
        .my-span {position: relative;display: none;
        }
        #line {
            position: absolute;
            bottom: 100px;
            display: none;
            height: 1px;
            width: 100%;
            background-color: #AFC440;
        }
        #myTable > thead > tr > th,
        #myTable > tbody > tr > th,
        #myTable > tfoot > tr > th,
        #myTable > thead > tr > td,
        #myTable > tbody > tr > td,
        #myTable > tfoot > tr > td {
          padding: 1px;
        }
        .rows {display: none;}
        #search_by_date {margin-left: 18%;}
        #ex1Slider .slider-selection {background: #BABABA;}
        .slider.slider-horizontal{width: 100%;}
        .background-slider {
            display: none;
            float: left;
            width: 100%;
            min-height: 20px;
            padding: 12px;
            background-color: #f5f5f5;
            border: 1px solid #e3e3e3;
            box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
            border-radius: 10px;
        }
        div.tooltip.tooltip-main.top{font-size: 10px;}
        #sum {padding: 0;font-size: 1.5em;font-weight: bold;}
        #navigation{display: none;}
        .md-48 { font-size: 48px; }
        #my_footer{padding: 20px;}
        .content{
            width: 80px;
            height: 80px;
            text-align: center;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
            border-radius: 10px;
            margin: 10px;
        }
        #col_nav {top:55px;}
        .nopadding {padding: 1px !important;margin: 1px !important;}
        .material-icons{line-height: 80px;}
        .material-icons.md-light { color: rgba(255, 255, 255, 1); }
        .material-icons.md-light.md-inactive { color: rgba(255, 255, 255, 0.3); }
        .link{color:white;}
        #toggle {width: 30px;height: 30px;top:185px;}
        #toggle div {
            /*top: 150px;
            width: 100%;*/
            height: 5px;
            background: white;
            margin: 4px auto;
            transition: all 0.3s;
            backface-visibility: hidden;
            border-radius: 10px;
        }
        #toggle.on .one {transform: rotate(45deg) translate(5px, 5px);}
        #toggle.on .two {opacity: 0;}
        #toggle.on .three {transform: rotate(-45deg) translate(7px, -8px);}
       /* .col{border: 1px solid red;}
        .row-fluid{border: 10px solid yellow;}*/
    </style>

{% endblock %}{#end block stylesheets#}

{% block body %}
<div class="container-fluid nopadding">

    <div class="row-fuild">
       <h1 class="text-center">Walking list</h1>
       <br><br>
    </div>
    <div class="row-fuild" >
        <div class="col col-md-1 nopadding" id="toggle">
            <div class="one"></div>
            <div class="two"></div>
            <div class="three"></div>
        </div>
        <div class="col col-md-1 nopadding" id="col_nav">
            <div id="navigation">
                <a class="link" href="http://127.0.0.1/keep_slim/web/app_dev.php/index">
                    <div class="content" id="content_home">
                        <i class="material-icons md-48 md-light md-inactive" id="home">home</i>
                    </div>
                </a>
                <a class="link" href="#">
                    <div class="content" id="content_pool">
                        <i class="material-icons md-48 md-light md-inactive" id="pool">pool</i>
                    </div>
                </a>
                <a class="link" href="#">
                    <div class="content" id="content_bike">
                        <i class="material-icons md-48 md-light md-inactive" id="bike">directions_bike</i>
                    </div>
                </a>
            </div>
        </div>
        <div class="col col-md-4"> {# table #}
            <div id="div_table">
                <table class="tablesorter table table-condensed" id="myTable">
                    <thead>
                        <tr>
                            <th class="header_cursor">Date</th>
                            <th class="header_cursor">Distance</th>
                            <th class="header_cursor">Step</th>
                            <th class="header_cursor">Comment</th>
                            <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for walking in walkings %}
                        <tr data-url="{{ path('walking_index', {'id': walking.id}) }}" data-id="{{ walking.id }}" class="rows">
                            {# <td>{{ walking.id }}</td> #}
                            <td>{{ walking.date|date("d/m/Y") }}</td>
                            <td>{{ walking.distance }}</td>
                            <td>{{ walking.step }}</td>
                            <td>{{ walking.comment }}</td>
                            <td>
                                <a href="{{ path('walking_show', { 'id': walking.id }) }}" class="btn btn-md glyphicon glyphicon-zoom-in" role="button"></a>
                                <a href="{{ path('walking_edit', { 'id': walking.id }) }}" class="btn btn-md glyphicon  glyphicon-pencil" role="button"></a>
                                <a href="{{ path('walking_delete', { 'id': walking.id }) }}" class="btn btn-md glyphicon  glyphicon-trash" role="button"></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <a id="create" href="{{ path('walking_new') }}">Create a new walking</a>
        </div> {# end table #}
        <div class="col col-md-4"> {# graphic area #}
            <br>
            <div class="row well text-center" id="sum"></div>
            <div class="row graphic-area">
                <div id="line"></div>
            </div>
            <br>
            <div class="row">
                <div class="col col-md-12 background-slider">
                   {# Slider #}
                    <div class="">
                          <input id="mySlider" data-slider-id="ex1Slider" type="text" data-slider-min="5000" data-slider-max="20000" data-slider-step="5000" data-slider-value="10000" style="display: none;">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col col-md-6">
                    <nav>
                      <ul class="pagination pagination-sm">
                        <li class="page-item disabled" id="first"><a class="page-link" href="#">&larr; First</a></li>
                        <li class="page-item" id="previous">
                          <a class="page-link" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span>Previous</span>
                          </a>
                        </li>
                        <li class="page-item" id="next">
                          <a class="page-link" aria-label="Next">
                            <span>Next</span>
                            <span aria-hidden="true">&raquo;</span>
                          </a>
                        </li>
                        <li class="page-item disabled" id="last"><a class="page-link" href="#">Last &rarr;</a></li>
                      </ul>
                    </nav>
                </div>
                <div class="col col-md-5">
                    <br>
                    <div class="input-group input-group-sm">
                      <input type="date" class="form-control" id="search_by_date">
                    </div>
                </div>
                <div class="col col-md-1">
                    <br>
                    <button type="button" class="btn btn-default btn-sm" id="btn_settings">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div> {# graphic area #}
       {# <div class="col col-md-2"></div>#}
    </div>

   {#<div class="row-fuild">
       <a id="create" href="{{ path('walking_new') }}">Create a new walking</a>
    </div>#}

   <div class="row-fluid text-center navbar-fixed-bottom" id="my_footer">
        <kbd class="text-footer">Keep Slim</kbd>
        <br>
        <kbd class="text-footer">By Dev For Dev<kbd>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"  src={{ asset('/assets/vendor/js/jquery.tablesorter.min.js') }}></script>
    <script type="text/javascript"  src={{ asset('/assets/vendor/js/bootstrap-slider.min.js') }}></script>
    <script type="text/javascript"  src={{ asset('/assets/vendor/js/main.js') }}></script>
    <script type="text/javascript">
        $(document).ready(function() {
            var toogle = $("#toggle");
            var nav = $("#navigation");
            var home = $("#home");
            var pool = $("#pool");
            var bike = $("#bike");

            var content_home = $("#content_home");
            var content_pool = $("#content_pool");
            var content_bike = $("#content_bike");

            toogle.click(function() {
                $(this).toggleClass("on");
                /*nav.slideToggle();*/
                nav.animate({width: 'toggle'});
            });

            content_home
                .mouseenter(function () {
                    $(this).css("background-color", "#4975FB")
                    home.removeClass('md-light md-inactive')
                    home.addClass("link")

                })
                .mouseleave(function () {
                    $(this).css("background-color", "transparent")
                    home.addClass('md-light md-inactive');
                })

            content_pool
                .mouseenter(function () {
                    $(this).css("background-color", "#EF5252")
                    pool.removeClass('md-light md-inactive');
                    pool.addClass("link")
                })
                .mouseleave(function () {
                    $(this).css("background-color", "transparent")
                    pool.addClass('md-light md-inactive');
                })

            content_bike
                .mouseenter(function () {
                    $(this).css("background-color", "#F59500")
                    bike.removeClass('md-light md-inactive');
                    bike.addClass("link")
                })
                .mouseleave(function () {
                    $(this).css("background-color", "transparent")
                    bike.addClass('md-light md-inactive');
                })
        })
    </script>
{% endblock %}
