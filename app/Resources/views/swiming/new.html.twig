{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 40%;
        }
    </style>
{% endblock %}
{% block content %}
    {% block header %}{{ parent() }}{% endblock %}
    <div class="container">
        <h3>New Swiming Row</h3>
        <br>
        {% form_theme form 'bootstrap_3_layout.html.twig'  %}
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="Create" class="btn btn-primary" />
        {{ form_end(form) }}
        <br><p><a href="{{ path('swiming_index') }}">Back to the list</a></p>
</div>
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}
